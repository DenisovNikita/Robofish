#include <Servo.h>

const int MIDDLE_DELAY = 2000;

Servo first;
Servo second;
Servo third;

void setup() {
  Serial.begin(9600);
  first.attach(2);
  second.attach(3);
  third.attach(4);
  delay(MIDDLE_DELAY);
  first.write(120);
  delay(MIDDLE_DELAY);
  second.write(60);
  delay(MIDDLE_DELAY);
  third.write(20);
}

void loop() {
  delay(500);
}
